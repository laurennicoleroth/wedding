body {
    font-family: 'Open Sans', sans-serif !important;
    color: #6c6965;
    font-size: 14px;
    font-weight: 400;
}

header {
    background-image: url("<%= asset_path('peristyle.jpg') %>");
}

.section-about {
    background-image: url("<%= asset_path('pw_maze_white.png') %>");
}

.section-dates {
    background-image: url("<%= asset_path('dates-bg.jpg') %>");
}

.edgt_elements_inner_1875079524 {
    text-align:center;
}

.transparent-black {
    background:rgba(0,0,0,0.4);
}


h4 {
    font-family: 'Oswald', serif;
    font-size: 36px;
    line-height: 44px;
    font-style: normal;
    font-weight: 400;
    letter-spacing: 0px;
    text-transform: uppercase;
}

.hd_perf {
    color: gold;
    font-family: 'Great Vibes', cursive;
    font-size: 7.5em;
    text-transform: none;
    padding-left: 20px;
    letter-spacing: 1px;
    line-height: 1;
    text-shadow: 2px 2px #555555;
}

.hd_only {
    color: beige;
    font-family: 'Playfair Display', serif;
    font-size: 50px;
    line-height: 0.5;
    padding-left: 180px;
    letter-spacing: 1px;
    text-shadow: 2px 1px #777;
}

.separator.transparent {
    border-color: transparent !important;
    clear: both;
}

.wpb_column > .wpb_wrapper .separator.small {
    margin-bottom: 10px !important;
}

.separator.small, .wpb_column>.wpb_wrapper .separator.small {
    border-bottom-width: 1px;
    border-color: #6c6965;
    width: 175px;
}

.separator.small {
    width: 27px;
    margin: 10px auto 20px auto;
}

.separator {
    position: relative;
    display: block;
    border-bottom: 1px solid #b2b2b2;
    margin: 10px 0;
}

.cat_serv {
    text-align: center;
    color: #fff;
    font-size: 20px;
    line-height: 1.5;
    font-family: 'Open Sans Condensed', sans-serif;
    text-transform: uppercase;
    font-weight: 100;
}

.cat_serv span {
    color: #fff;
    border-bottom: 1px solid white;
    padding-bottom: 12px;
}



.wekeepit_smpl {
    color: white;
    font-family: 'Playfair Display', serif;
    font-size: 46px;
    line-height: 1.5;
    letter-spacing: 1.5px;
    text-transform: uppercase;
}

.navbar a {
    color: white;
}


#peristyle {
    /* The image used */
    background-image: url("<%= asset_path('peristyle.jpg') %>");

    /* Set a specific height */
    /* Create the parallax scrolling effect */
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

@media (max-width: 1400px) {
.hmpg_wekeepit_septop {
    margin-top: 12%!important;
}
}

@media (min-width: 767px) {
    .navbar {
        padding: 5px !important;
        -webkit-transition: background .5s ease-in-out,padding .5s ease-in-out;
        -moz-transition: background .5s ease-in-out,padding .5s ease-in-out;
        transition: background .5s ease-in-out,padding .5s ease-in-out;
    }
}
